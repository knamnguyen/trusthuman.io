{
  "name": "@sassy/chrome-extension",
  "version": "1.4.0",
  "description": "EngageKit Chrome Extension - Automatically comment on LinkedIn posts using AI",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env vite build --config vite.config.chrome.ts",
    "build:chrome": "pnpm with-env vite build --config vite.config.chrome.ts",
    "build:firefox": "pnpm with-env vite build --config vite.config.firefox.ts",
    "dev": "pnpm with-env nodemon --config nodemon.chrome.json",
    "dev:chrome": "pnpm with-env nodemon --config nodemon.chrome.json",
    "dev:firefox": "pnpm with-env nodemon --config nodemon.firefox.json",
    "clean": "git clean -xdf .cache .turbo dist_chrome dist_firefox node_modules",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.2",
    "@clerk/clerk-react": "^5.32.3",
