    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
