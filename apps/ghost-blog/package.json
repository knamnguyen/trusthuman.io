{
  "name": "@sassy/ghost-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build:site && pnpm build:components && pnpm build:tools",
    "build:site": "pnpm with-env vite build",
    "build:components": "pnpm with-env vite build --config vite.config.components.js",
    "build:tools": "pnpm with-env vite build --config vite.config.tools.js",
    "clean": "git clean -xdf .cache dist .turbo node_modules",
    "dev": "pnpm with-env vite",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "preview": "pnpm with-env vite preview",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
