{
  "name": "@sassy/capacitor-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm with-env vite",
    "build": "pnpm with-env tsc && pnpm with-env vite build",
    "build:prod": "pnpm with-env:prod tsc && pnpm with-env:prod vite build",
    "preview": "vite preview",
    "with-env": "dotenv -e ../../.env --",
    "with-env:prod": "dotenv -e ../../.env.prod --",
    "sync": "cap sync",
    "sync:ios": "cap sync ios",
    "sync:prod": "pnpm build:prod && cap sync ios",
    "open:ios": "cap open ios",
    "run:ios": "cap run ios",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo dist ios node_modules"
  },
  "dependencies": {
    "@capacitor/app": "^7.0.0",
    "@capacitor/browser": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@clerk/clerk-react": "^5.32.3",
    "@sassy/api": "workspace:*",
    "@sassy/ui": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-router-dom": "^7.1.3",
    "superjson": "2.2.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.0",
    "@sassy/eslint-config": "workspace:*",
    "@sassy/prettier-config": "workspace:*",
    "@sassy/tailwind-config": "workspace:*",
    "@sassy/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "^5.1.1",
    "dotenv-cli": "^8.0.0",
    "tailwindcss": "^4.1.8",
    "typescript": "catalog:",
    "vite": "^6.3.5"
  },
  "prettier": "@sassy/prettier-config"
