{
  "extends": "@sassy/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": [
    "src",
    ".",
    ".next/types/**/*.ts",
    "../archive/chrome-extension/extension_dist_chrome"
  ],
  "exclude": ["node_modules"]
}
