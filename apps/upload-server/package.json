{
  "name": "@sassy/upload-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Dedicated upload server for handling large file uploads to Gemini Files API",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "PORT=3001 pnpm with-env tsx watch src/index.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env bun src/index.ts",
    "start:prod": "NODE_ENV=production pnpm with-env bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@google/genai": "^1.5.1",
    "@hono/node-server": "^1.8.2",
    "dotenv": "^16.3.2",
    "hono": "^4.0.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@sassy/eslint-config": "workspace:*",
    "@sassy/prettier-config": "workspace:*",
    "@sassy/tsconfig": "workspace:*",
    "@types/node": "^22.10.10",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "prettier": "@sassy/prettier-config"
}
