{
  "name": "@sassy/gemini-upload-lambda",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "build": "esbuild src/handler.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/handler.mjs --external:@aws-sdk/*",
    "deploy": "pnpm with-env bun deployment/deploy.ts",
    "test-upload": "pnpm with-env bun scripts/test-upload.ts"
  },
  "dependencies": {
    "@google/genai": "^1.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@aws-sdk/client-lambda": "^3.0.0",
    "@sassy/eslint-config": "workspace:*",
    "@sassy/prettier-config": "workspace:*",
    "@sassy/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.19.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@sassy/prettier-config"
}
