//binaryTargets to handle the client for production environment on vercel
//specify output locations so that path resolve work with turbo repo
generator client {
  provider        = "prisma-client-js"
  output          = "../generated/node"
  binaryTargets   = ["native", "rhel-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
  previewFeatures = ["postgresqlExtensions"]
}

// Dedicated edge client for Cloudflare Workers
generator edge {
  provider        = "prisma-client-js"
  output          = "../generated/edge"
  binaryTargets   = ["native"]
  previewFeatures = ["driverAdapters", "postgresqlExtensions"]
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../generated/zod-prisma-validators"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [vector]
}

//note that post current does not connect to a user
//you would want to connect it to a user later
model Post {
  id        String   @id @default(uuid())
  title     String   @db.VarChar(256)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AccessType {
  TRIAL
  FREE
  LIFETIME
  MONTHLY
  YEARLY
}

// User model to link with Clerk users
model User {
  id                   String     @id // This is the Clerk ID
  firstName            String?
  lastName             String?
  username             String?    @unique
  primaryEmailAddress  String?    @unique
  imageUrl             String?
  clerkUserProperties  Json? // Made optional to preserve existing data
  stripeCustomerId     String?    @unique
  accessType           AccessType @default(FREE)
  stripeUserProperties Json?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
}

// Original uploaded demo videos (4-5 minutes)
model DemoVideo {
  id                    String                      @id @default(cuid())
  s3Url                 String // S3 URL where the original demo video is stored
  productInfo           String? // Product information
  colorPalette          Json? // Color palette of the video as JSON array (optional)
  demoInfoEmbedding     Unsupported("vector(768)")?
  colorPaletteEmbedding Unsupported("vector(768)")?
  durationSeconds       Int // Original video duration in seconds
  createdAt             DateTime                    @default(now())
  updatedAt             DateTime                    @updatedAt

  // Relationship to generated short versions
  shortDemos ShortDemo[]

  @@index([s3Url])
}

// AI-generated short versions of demo videos (30 seconds)
model ShortDemo {
  id              String @id @default(cuid())
  demoVideoId     String // Foreign key to original demo
  s3Url           String // S3 URL of the short version
  durationSeconds Int // Actual duration of short video

  // Optional fields for future use
  colorPalette           String? // Color palette (optional)
  colorPaletteEmbedding  Unsupported("vector(768)")?
  shortDemoInfo          String? // Description/info about this short version (optional)
  shortDemoInfoEmbedding Unsupported("vector(768)")?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationship back to original demo
  demoVideo DemoVideo @relation(fields: [demoVideoId], references: [id], onDelete: Cascade)

  @@index([demoVideoId]) // Fast lookup: "Find all shorts for this demo"
  @@index([s3Url]) // Fast lookup: "Find short by S3 URL"
}

// Hook viral videos from TikTok for training/reference data
model HookViralVideo {
  id                    String                      @id @default(cuid())
  webpageUrl            String                      @unique // TikTok video URL - used to check for duplicates
  s3Url                 String // S3 URL where the video is stored
  colorPalette          Json? // Color palette of the video as JSON array
  hookEndTimestamp      String // Timestamp where the hook ends
  hookCutConfidence     String? // Confidence in the hook cut
  hookCutUrl            String? // S3 URL where the hook cut is stored
  hookInfo              String? // Description of the hook
  title                 String // Video title from TikTok
  description           String? // Video description/caption
  // Google text-embedding-004 produces 768-dimensional embeddings
  viralInfoEmbedding    Unsupported("vector(768)")?
  colorPaletteEmbedding Unsupported("vector(768)")?
  views                 Int                         @default(0) // View count
  comments              Int                         @default(0) // Comment count  
  likes                 Int                         @default(0) // Like count
  durationSeconds       Int // Video duration in seconds
  createdAt             DateTime                    @default(now())
  updatedAt             DateTime                    @updatedAt

  @@index([webpageUrl])
}

