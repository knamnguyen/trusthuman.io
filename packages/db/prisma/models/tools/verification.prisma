model HumanVerification {
  id          String   @id @default(uuid())
  userId      String?
  verified    Boolean
  confidence  Float
  faceCount   Int
  rawResponse Json
  actionType  String   @default("linkedin_comment")
  actionUrl   String?
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
