model User {
  id                  String   @id
  firstName           String?
  lastName            String?
  username            String?  @unique
  primaryEmailAddress String   @unique
  imageUrl            String?
  clerkUserProperties Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  linkedInAccounts        LinkedInAccount[]
  organizationMemberships OrganizationMember[]
  paidOrganizations       Organization[]       @relation("OrgPayer") // Orgs this user pays for

  //to be deprecated move to linkedin account - leave for now since in prod
  // except stripe customer id will be moved to org table

  stripeCustomerId     String?            @unique
  accessType           AccessType         @default(FREE)
  stripeUserProperties Json?
  dailyAIcomments      Int                @default(0)
  profileImportRuns    ProfileImportRun[]

  //not sure about these - should these be linkedin to linkedin-account table?
  UserBrowserState UserBrowserState[]
  AutoCommentRun   AutoCommentRun[]

  //tools - keep attached to each user for now
  linkedInPostPreviews LinkedInPostPreview[]
  commentAnalyses      CommentAnalysis[]
  AutoCommentConfig    AutoCommentConfig[]
}

enum AccessType {
  FREE
  WEEKLY
  MONTHLY
  YEARLY
}
