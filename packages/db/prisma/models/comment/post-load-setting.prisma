//for chrome extension
//load this to show as "tags" in the compose tab - apply for "load posts" - don't care about individual mode

model PostLoadSetting {
  accountId         String   @id
  targetListEnabled Boolean  @default(false)
  targetListIds     String[]

  //input box of hours from minimum 1h to max 8760 - not slider
  //only get posts posted within (younger than) X hours
  timeFilterEnabled Boolean @default(false)
  minPostAge        Int?

  skipFriendActivitiesEnabled Boolean @default(false)
  skipCompanyPagesEnabled     Boolean @default(true)
  skipPromotedPostsEnabled    Boolean @default(true)
  skipblacklistEnabled        Boolean @default(false)
  blacklistId                 String? @unique

  skipFirstDegree  Boolean @default(false)
  skipSecondDegree Boolean @default(false)
  skipThirdDegree  Boolean @default(false)
  skipFollowing    Boolean @default(false)

  // Performance optimization: Skip loading LinkedIn comments during post collection (50% faster)
  // AI will only use post caption, not adjacent comments
  skipCommentsLoading Boolean @default(true)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  linkedInAccount LinkedInAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  blacklist       TargetList?     @relation("PostLoadSetting_blacklist", fields: [blacklistId], references: [id], onDelete: SetNull)
}
