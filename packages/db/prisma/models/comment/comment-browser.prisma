model AutoCommentRun {
  id          String    @id
  accountId   String
  liveUrl     String
  startedAt   DateTime?
  endedAt     DateTime?
  scheduledAt DateTime
  error       String?
  status      String
  comments    Comment[]
  hitlMode    Boolean   @default(false)

  account LinkedInAccount @relation(fields: [accountId], references: [id])
  user    User?           @relation(fields: [userId], references: [id])
  userId  String?
}
