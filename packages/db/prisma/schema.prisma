generator client {
  provider        = "prisma-client-js"
  output          = "../generated/node"
  previewFeatures = ["postgresqlExtensions"]
  binaryTargets   = ["native", "rhel-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

generator edge {
  provider        = "prisma-client-js"
  output          = "../generated/edge"
  previewFeatures = ["driverAdapters", "postgresqlExtensions"]
  binaryTargets   = ["native"]
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../generated/zod-prisma-validators"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions"), vector]
}

model Post {
  id        String   @id @default(uuid())
  title     String   @db.VarChar(256)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id                   String     @id
  firstName            String?
  lastName             String?
  username             String?    @unique
  primaryEmailAddress  String?    @unique
  imageUrl             String?
  clerkUserProperties  Json?
  stripeCustomerId     String?    @unique
  accessType           AccessType @default(FREE)
  stripeUserProperties Json?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
}

model DemoVideo {
  id              String      @id @default(cuid())
  s3Url           String
  durationSeconds Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  shortDemos      ShortDemo[]

  @@index([s3Url])
}

model ShortDemo {
  id                    String                 @id @default(cuid())
  demoVideoId           String
  durationSeconds       Int
  colorPaletteEmbedding Unsupported("vector")?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  demoCutUrl            String
  productInfo           String?
  productInfoEmbedding  Unsupported("vector")?
  segments              Json
  colorPalette          Json?
  demoVideo             DemoVideo              @relation(fields: [demoVideoId], references: [id], onDelete: Cascade)
  viralStitches         ViralStitch[]

  @@index([demoVideoId])
  @@index([demoCutUrl])
}

model HookViralVideo {
  id                    String                 @id @default(cuid())
  webpageUrl            String                 @unique
  s3Url                 String
  hookEndTimestamp      String
  hookCutConfidence     String?
  hookCutUrl            String?
  hookInfo              String?
  title                 String
  description           String?
  viralInfoEmbedding    Unsupported("vector")?
  views                 Int                    @default(0)
  comments              Int                    @default(0)
  likes                 Int                    @default(0)
  durationSeconds       Int
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  colorPaletteEmbedding Unsupported("vector")?
  colorPalette          Json?
  viralStitches         ViralStitch[]

  @@index([webpageUrl])
}

model ViralStitch {
  id               String         @id @default(cuid())
  shortDemoId      String
  hookViralVideoId String
  stitchedVideoUrl String
  durationSeconds  Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  // Relationships
  shortDemo      ShortDemo      @relation(fields: [shortDemoId], references: [id], onDelete: Cascade)
  hookViralVideo HookViralVideo @relation(fields: [hookViralVideoId], references: [id], onDelete: Cascade)

  @@index([shortDemoId])
  @@index([hookViralVideoId])
  @@index([stitchedVideoUrl])
  @@unique([shortDemoId, hookViralVideoId])
}

enum AccessType {
  TRIAL
  FREE
  LIFETIME
  MONTHLY
  YEARLY
}
