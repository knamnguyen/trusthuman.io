{
  "name": "@sassy/langchain",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./embeddings": "./src/embeddings.ts",
    "./schema-validators": "./src/schema-validators.ts",
    "./vector-store": "./src/vector-store.ts"
  },
  "license": "MIT",
  "scripts": {
