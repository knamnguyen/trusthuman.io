  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/google-genai": "^0.1.0",
    "@sassy/db": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@sassy/eslint-config": "workspace:*",
    "@sassy/prettier-config": "workspace:*",
    "@sassy/tsconfig": "workspace:*",
    "@types/node": "^22.10.10",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@sassy/prettier-config"
